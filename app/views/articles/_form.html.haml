= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :titile
    = f.text_field :titile
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
